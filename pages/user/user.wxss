/* pages/user/user.wxss */
.review-card {
  overflow: hidden;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
}

.review-header {
  font-size: 40rpx;
  font-weight: 700;
  padding: 24rpx;
}

.review-desc {
  font-size: 32rpx;
  font-weight: 600;
  color: gray;
  padding: 24rpx;
}
.avatar {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}